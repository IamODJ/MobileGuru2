<?xml version="1.0" encoding="utf-8"?>
<resources>

        <color name="white">#FFFFFF</color>
        <color name="signupColor">#066e8a</color>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Custom" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Loading data, Please wait.</item>
        <item name="DialogSpotColor">#FF5623</item>
        <item name="DialogSpotCount">8</item>
    </style>

    <style name="Down" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Downloading Chapter files. This might take a while. Please do not close this window.</item>
        <item name="DialogSpotColor">#FF5623</item>
        <item name="DialogSpotCount">8</item>
    </style>
    <style name="play" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Fetching Audio file,Please wait.</item>
        <item name="DialogSpotColor">#FF5623</item>
        <item name="DialogSpotCount">8</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="MyEditTextStyle2" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">#dc8f41</item>
        <item name="colorControlNormal">#dc8f41</item>
    </style>
    <style name="AppTheme.NoActionBar.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>